{
  "compilerOptions": {
    "target": "ES5",
    "baseUrl": "./",
    "paths": {
      "vue-types": ["../src/index.ts"],
      "vue-types/*": ["../src/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "../src/**/*.ts"]
}
